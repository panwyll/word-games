// For local development, you can use PostgreSQL via Docker or a cloud service
// SQLite is not supported in serverless environments like Vercel
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id                 String    @id @default(cuid())
  email              String    @unique
  passwordHash       String
  name               String?
  tier               String    @default("free")   // "free" | "premium"
  stripeCustomerId   String?   @unique
  subscriptionId     String?
  subscriptionStatus String?   // "active" | "canceled" | "past_due" | "trialing"
  subscriptionEnd    DateTime?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
}
